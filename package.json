{
	"name": "@rbxts/mathcat",
	"version": "0.0.6",
	"author": "Isaac Mason <isaac@isaacmason.com>",
	"description": "a collection of math helpers for 3D graphics and simulations",
	"keywords": [
		"math",
		"vector",
		"matrix",
		"quaternion",
		"euler",
		"random",
		"noise"
	],
	"license": "MIT",
	"type": "module",
	"main": "out/src/init.lua",
	"types": "out/src/index.d.ts",
	"files": [
		"out/src",
		"!out/tst",
		"!**/*.tsbuildinfo"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shrjrd/rbxts-mathcat.git"
	},
	"scripts": {
		"build": "rbxtsc",
		"build:dev": "rbxtsc --type game --rojo default.project.json",
		"build:rbxl": "rojo sourcemap -o sourcemap.json && rojo build -o project.rbxl",
		"watch": "npm run build:dev && npx concurrently \"npm run build:dev -- -w\" \"mise exec -- rojo serve\""
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@rbxts/compiler-types": "^3.0.0-types.0",
		"@rbxts/jest": "^3.13.3-alpha.2",
		"@rbxts/jest-globals": "^3.13.3-alpha.2",
		"@rbxts/types": "^1.0.894",
		"@typescript-eslint/eslint-plugin": "^8.48.0",
		"@typescript-eslint/parser": "^8.48.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-roblox-ts": "^1.3.0",
		"prettier": "^3.7.0",
		"roblox-ts": "^3.0.0",
		"rojo": "^1.0.3-rojo7.6.1",
		"typescript": "^5.9.3"
	}
}
